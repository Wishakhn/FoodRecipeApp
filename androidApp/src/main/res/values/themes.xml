<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FoodRecipeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ocean_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/nature_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FoodRecipe.NoActionBar" parent="Theme.FoodRecipeApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Splash.FoodRecipe" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">600</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_laucher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodRecipe.NoActionBar</item>
    </style>
</resources>